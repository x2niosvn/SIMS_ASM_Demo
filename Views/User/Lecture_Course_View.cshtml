@model Dictionary<SIMS_ASM.Models.Course, List<SIMS_ASM.Models.User>>

@{
    ViewData["Title"] = "Lecture Course View";
}

<h1 class="text-center">Lecture Course View</h1>

<div class="container">
    @if (Model.Any())
    {
        @foreach (var item in Model)
        {
            <div class="card mb-3">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">@item.Key.Name</h5>
                </div>
                <div class="card-body">
                    <h6 class="card-subtitle mb-3">Students:</h6>
                    <ul class="list-group">
                        @foreach (var student in item.Value)
                        {
                            <li class="list-group-item">@student.Name - @student.Email</li>
                        }
                    </ul>
                </div>
            </div>
        }
    }
    else
    {
        <p class="text-center">No courses found.</p>
    }
</div>
